{
  "type": "object",
  "options": {
    "disable_edit_json": false
  },
  "properties": {

    "appPath": {
      "type": "string",
      "options": {
        "hidden": true
      },
      "default": "{{appPath}}"
    },

    "appLauncher": {
      "type": "string",
      "options": {
        "hidden": true
      },
      "default": "{{appLauncher}}"
    },

    "config": {
      "title": "Configuration",
      "type": "object",
      "properties": {

        "targetUrl": {
          "title": "Exit URL",
          "type": "string",
          "format": "url",
          "description": "URL to open when the CTA is clicked",
          "minLength": 4,
          "default": "{{targetUrl}}"
        },

        "addCloseButton": {
          "title": "Add Close Button",
          "type": "boolean",
          "default": true,
          "description": "Should a close button be added",
          "format": "checkbox"
        },

        "closeButton": {
          "title": "Close Button",
          "type": "object",
          "properties": {

            "style": {
              "title": "Style",
              "type": "string",
              "enum": [
                "cross",
                "countdown",
                "image",
                "none"
              ],
              "default": "cross",
              "description": "The type of close button to display"
            },

            "image": {
              "title": "Image for Close Button",
              "type": "string",
              "format": "url",
              "description": "URL to close button image when using image style",
              "minLength": 4,
              "default": ""
            },

            "color": {
              "title": "Close Button Color",
              "type": "string",
              "format": "color",
              "default": "#ffffff",
              "description": "The color of the close button when using cross or countdown styles"
            },

            "opacity": {
              "type": "number",
              "title": "Opacity",
              "description": "Opacity of the close button",
              "default": 0.8,
              "minimum": 0,
              "maximum": 1
            },

            "delayTime": {
              "type": "number",
              "title": "Close Button Delay Time",
              "description": "Time in seconds before the close button will appear",
              "default": 0,
              "minimum": 0,
              "maximum": 60
            },

            "fadeTime": {
              "type": "number",
              "title": "Close Button Fade In Time",
              "description": "Time in seconds the close button will take to fade in",
              "default": 1,
              "minimum": 0,
              "maximum": 60
            }

          }
        }

      }
    }
  }
}
